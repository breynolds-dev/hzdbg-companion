{
  "name": "hzdbg-companion",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "docker:build": "docker build -t hzdbg-companion-docker .",
    "docker:run": "docker run -p 3000:3000 hzdbg-companion-docker",
    "cz": "git-cz",
    "commitlint:check": "npx commitlint --from HEAD1 --to HEAD --verbose",
    "commitlint": "commitlint -e $GIT_PARAMS",
    "dev": "next dev",
    "lint:fix": "next lint --fix",
    "lint:strict": "next lint '*/**/*.{js,jsx,ts,tsx}'",
    "lint": "next lint",
    "prepare": "husky",
    "prettier": "prettier --write */**/*.{json,css,md}",
    "start": "next dev",
    "start:production": "next start"
  },
  "dependencies": {
    "@algolia/autocomplete-core": "1.17.4",
    "@headlessui/react": "2.1.2",
    "@headlessui/tailwindcss": "0.2.1",
    "@mdx-js/loader": "3.0.1",
    "@mdx-js/react": "3.0.1",
    "@next/mdx": "14.2.5",
    "@sindresorhus/slugify": "2.2.1",
    "@tailwindcss/typography": "0.5.13",
    "acorn": "8.12.1",
    "autoprefixer": "10.4.20",
    "clsx": "2.1.1",
    "fast-glob": "3.3.2",
    "flexsearch": "0.7.43",
    "framer-motion": "11.3.21",
    "mdast-util-to-string": "4.0.0",
    "mdx-annotations": "0.1.4",
    "next": "14.2.5",
    "next-themes": "0.3.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-highlight-words": "0.20.0",
    "remark": "15.0.1",
    "remark-gfm": "4.0.0",
    "remark-mdx": "3.0.1",
    "shiki": "^0.14.7",
    "simple-functional-loader": "1.2.1",
    "tailwindcss": "3.4.7",
    "unist-util-filter": "5.0.1",
    "unist-util-visit": "5.0.0",
    "usehooks-ts": "^3.1.0",
    "zustand": "4.5.4"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@eslint/eslintrc": "2.1.1",
    "@eslint/js": "~8.57.0",
    "@nx/eslint": "19.5.2",
    "@nx/eslint-plugin": "19.5.2",
    "@stylistic/eslint-plugin": "1.8.1",
    "@stylistic/eslint-plugin-migrate": "1.8.1",
    "@types/mdx": "2.0.13",
    "@types/node": "22.1.0",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/react-highlight-words": "0.20.0",
    "@typescript-eslint/eslint-plugin": "7.17.0",
    "@typescript-eslint/parser": "7.17.0",
    "commitizen": "4.3.0",
    "commitizen-emoji": "1.0.5",
    "commitlint-config-gitmoji": "2.3.1",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jsx-a11y": "6.9.0",
    "eslint-plugin-mdx": "3.1.5",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-perfectionist": "3.1.2",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "husky": "9.1.4",
    "lint-staged": "15.2.8",
    "postcss": "8.4.40",
    "sharp": "0.33.4",
    "typescript": "5.5.4"
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "header-min-length": [
        1,
        "always",
        30
      ],
      "header-max-length": [
        1,
        "always",
        200
      ],
      "scope-max-length": [
        1,
        "always",
        20
      ],
      "scope-case": [
        2,
        "always",
        [
          "lower-case",
          "pascal-case"
        ]
      ]
    }
  }
}
