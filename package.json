{
  "name": "hzdbg-companion",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "cz": "git-cz",
    "commitlint:check": "npx commitlint --from HEAD1 --to HEAD --verbose",
    "commitlint": "commitlint -e $GIT_PARAMS",
    "dev": "next dev",
    "lint:fix": "next lint --fix",
    "lint:strict": "next lint '*/**/*.{js,jsx,ts,tsx}'",
    "lint": "next lint",
    "prepare": "husky",
    "prettier": "prettier --write */**/*.{json,css,md}",
    "start": "next start"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@types/node": "20.14.14",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "commitizen": "4.3.0",
    "commitizen-emoji": "1.0.5",
    "commitlint-config-gitmoji": "2.3.1",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "husky": "9.1.4",
    "lint-staged": "15.2.8",
    "postcss": "8.4.40",
    "tailwindcss": "3.4.7",
    "typescript": "5.5.4"
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "header-min-length": [
        1,
        "always",
        30
      ],
      "header-max-length": [
        1,
        "always",
        200
      ],
      "scope-max-length": [
        1,
        "always",
        20
      ],
      "scope-case": [
        2,
        "always",
        [
          "lower-case",
          "pascal-case"
        ]
      ]
    }
  }
}
